{
  "variables": {
    "autounattend": "",
    "boot_command_prefix": "",
    "box_tag": "",
    "compression_level": "6",
    "iso_checksum_type": "",
    "iso_checksum": "",
    "iso_url": "",
    "vagrant_cloud_token": "",
    "virtualbox_guest_type": "",
    "vm_disk_adapter_type": "sata",
    "vm_disk_size": "36864",
    "vm_name": "",
    "vm_winrm_password": "vagrant",
    "vm_winrm_username": "vagrant",
    "vmware_guest_type": "",
    "windows_vm_memory": "2048",
    "windows_vm_vcpu": "2"
  },
  "builders": [
    {
      "boot_wait": "2m",
      "communicator": "winrm",
      "cpus": "{{ user `windows_vm_vcpu` }}",
      "disk_size": "{{ user `vm_disk_size` }}",
      "floppy_files": [
        "{{ user `autounattend` }}",
        "scripts/bootstrap.ps1",
        "scripts/oracle-cert.cer"
      ],
      "guest_additions_mode": "attach",
      "guest_os_type": "{{ user `virtualbox_guest_type` }}",
      "hard_drive_interface": "{{ user `vm_disk_adapter_type` }}",
      "headless": true,
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_url": "{{ user `iso_url` }}",
      "memory": "{{ user `windows_vm_memory` }}",
      "output_directory": "output-{{ user `vm_name` }}-{{ build_type }}-{{ timestamp }}",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "type": "virtualbox-iso",
      "vm_name": "{{ user `vm_name` }}-{{ timestamp }}",
      "winrm_insecure": true,
      "winrm_password": "{{ user `vm_winrm_password` }}",
      "winrm_timeout": "4h",
      "winrm_use_ssl": false,
      "winrm_username": "{{ user `vm_winrm_username` }}"
    },
    {
      "boot_wait": "2m",
      "communicator": "winrm",
      "cpus": "{{ user `windows_vm_vcpu` }}",
      "disk_adapter_type": "{{ user `vm_disk_adapter_type` }}",
      "disk_size": "{{ user `vm_disk_size` }}",
      "disk_type_id": 0,
      "floppy_files": [
        "{{ user `autounattend` }}",
        "scripts/bootstrap.ps1",
        "scripts/oracle-cert.cer"
      ],
      "guest_os_type": "{{ user `vmware_guest_type` }}",
      "headless": true,
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_url": "{{ user `iso_url` }}",
      "memory": "{{ user `windows_vm_memory` }}",
      "output_directory": "output-{{ user `vm_name` }}-{{ build_type }}-{{ timestamp }}",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "tools_upload_flavor": "windows",
      "tools_upload_path": "c:/Windows/Temp/windows.iso",
      "type": "vmware-iso",
      "vm_name": "{{ user `vm_name` }}-{{ timestamp }}",
      "vmx_data": {
        "scsi0.virtualDev": "lsisas1068"
      },
      "vmx_remove_ethernet_interfaces": true,
      "winrm_insecure": true,
      "winrm_password": "{{ user `vm_winrm_password` }}",
      "winrm_timeout": "4h",
      "winrm_use_ssl": false,
      "winrm_username": "{{ user `vm_winrm_username` }}"
    }
  ],
  "provisioners": [
    {
      "type": "powershell",
      "scripts": [
        "scripts/base.ps1",
        "scripts/vagrant.ps1",
        "scripts/remove_default_apps.ps1",
        "scripts/virtualbox.ps1",
        "scripts/vmware.ps1",
        "scripts/windows_updates.ps1",
        "scripts/cleanup.ps1"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "compression_level": "{{ user `compression_level` }}",
        "output": "{{ user `vm_name` }}-{{.Provider}}-{{ timestamp }}.box",
        "type": "vagrant"
      },
      {
        "type": "vagrant-cloud",
        "box_tag": "{{ user `box_tag` }}",
        "access_token": "{{ user `vagrant_cloud_token` }}",
        "version": "{{ timestamp }}"
      },
      {
        "type": "manifest",
        "output": "manifest.json",
        "strip_path": true
      }
    ]
  ]
}
